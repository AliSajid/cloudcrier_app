##### https://flake8.pycqa.org/en/latest/user/configuration.html
[flake8]
ignore =
    # D100: Missing docstring at top of file
    D100,
    # D104: Missing docstring in __init__.py
    D104,
    # D401: Docstring first line should be imperative
    D401,
    # D101 Missing docstring in public class
    D101,
    # D102 Missing docstring in public method
    D102,

exclude = 
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__
    # No need to check the GitHub directory
    .github
    # No need to check the venv directory
    venv
    .venv
    # Don't check the development directory
    ./development/*.py
    # Don't check the mypy cache
    .mypy_cache
    # Don't check the distribution directory
    dist

# Limit on the calculated McCabe complexity of a unit of code
max-complexity = 10

# Black likes 88, it's a lucky number
max-line-length = 88
